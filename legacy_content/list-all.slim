content_type: html
layout: false
flags: -sitemap,

doctype html
html
  head
  body
    h3
      = index.pages.select{ |p| !p.flag?('-sitemap') && !p.flag?('partial') }.count
      |  pages found
    table
      - index.pages.select{ |p| !p.flag?('-sitemap') && !p.flag?('partial') }.each do |p|
        tr
          td 
            a href==url_for(p) 
              == p.path
          td style="width:300px"
            a href==url_for(p) 
              == p.heading
          td 
            div
              == p.summary(self, 50)

    - if dev?
      h3 Hidden and not-yet-relased pages
      table
        - index.enum_files { |p| p.is_page? && !p.can_render? && !p.flag?('partial') }.to_a.each do |p|
          tr
            td 
              a href==url_for(p) 
                == p.path
            td style="width:300px"
              a href==url_for(p) 
                == p.heading

      h3 Layout files (non-indexed)
      ul
        - index.enum_files { |p| !p.is_page? && p.in_layout_dir? }.to_a.each do |p|
          li == p.path


